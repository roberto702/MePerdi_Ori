<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.micasa.meperdi.MisPublicacionesActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Mis publicaciones recientes"
            android:textSize="26dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="2.57">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha publicación: 15 feb 2016"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/imagenUno"
            android:src="@drawable/mascota1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="199dp"
            android:layout_height="206dp"
            android:onClick="onClickImg1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="2.57">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha publicación: 01 ago 2016"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/imagenDos"
            android:src="@drawable/mascota2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="306dp"
            android:layout_height="147dp"
            android:onClick="onClickImg2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="2.57">

        <ImageView
            android:id="@+id/imagenContactos"
            android:src="@drawable/facebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="306dp"
            android:layout_height="32dp"
            android:onClick="onClick2"/>
         <!--   android:layout_gravity="fill" -->
<!--
        <ImageView
            android:id="@+id/imageFacebook"
            android:src="@drawable/facebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="306dp"
            android:layout_height="30dp"
            android:onClick="onClick2"/> -->
         <!--   android:layout_gravity="fill" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="2.57">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva publicación"
            android:id="@+id/button_publicar"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:onClick="onClickButNuevaPub"/>
    </LinearLayout>

 </LinearLayout>
